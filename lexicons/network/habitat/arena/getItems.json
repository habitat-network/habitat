{
    "lexicon": 1,
    "id": "network.habitat.arena.getItems",
    "defs": {
        "main": {
            "type": "query",
            "description": "Retrieve all items from a specified habitat arena.",
            "permission": "authenticated",
            "parameters": {
                "type": "params",
                "required": [
                    "arenaID"
                ],
                "properties": {
                    "arenaID": {
                        "type": "string",
                        "format": "habitat-uri",
                        "description": "The ID of the arena to retrieve items from."
                    }
                }
            },
            "output": {
                "encoding": "application/json",
                "schema": {
                    "type": "object",
                    "required": [
                        "allowToken",
                        "items"
                    ],
                    "properties": {
                        "allowToken": {
                            "type": "string",
                            "description": "Token providing proof that the caller can read the record, verifiable by the repos hosting the arena's items.",
                            "format": "permission-token"
                        },
                        "items": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "format": "habitat-uri"
                            },
                            "description": "The list of items present in the arena."
                        }
                    }
                }
            }
        }
    }
}