{
    "lexicon": 1,
    "id": "network.habitat.arena.sendItem",
    "defs": {
        "main": {
            "type": "procedure",
            "description": "Send an item to a specified habitat arena.",
            "permission": "authenticated",
            "input": {
                "encoding": "application/json",
                "schema": {
                    "type": "object",
                    "required": [
                        "item",
                        "arenaID"
                    ],
                    "properties": {
                        "item": {
                            "type": "string",
                            "format": "habitat-uri",
                            "description": "The URI for the item to send to the arena."
                        },
                        "arenaID": {
                            "type": "string",
                            "format": "habitat-uri",
                            "description": "The ID of the arena to send the item to."
                        }
                    }
                }
            },
            "output": {
                "encoding": "application/json",
                "schema": {
                    "type": "object",
                    "properties": {
                        "status": {
                            "type": "string",
                            "description": "Result status of the send operation, e.g., 'success' or 'error'."
                        },
                        "message": {
                            "type": "string",
                            "description": "Optional message providing additional information about the operation."
                        }
                    }
                }
            }
        }
    }
}