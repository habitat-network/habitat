{
  "lexicon": 1,
  "id": "network.habitat.listRecords",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "List records with optional filters for subjects, lexicons, and timestamps.",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": [
            "subjects",
            "collection"
          ],
          "properties": {
            "subjects": {
              "type": "array",
              "description": "Repos or arenas to search from to retrieve records.",
              "items": {
                "type": "union",
                "refs": [
                  "#owner",
                  "#arena"
                ]
              }
            },
            "collection": {
              "type": "string",
              "description": "Filter by specific lexicons",
              "items": {
                "type": "string",
                "format": "nsid"
              }
            },
            "since": {
              "type": "string",
              "description": "Allow getting records that are strictly newer or updated since a certain time.",
              "format": "datetime"
            },
            "limit": {
              "type": "integer",
              "description": "[UNIMPLEMENTED] The number of records to return. (Default value should be 50 to be consistent with atproto API)."
            },
            "cursor": {
              "type": "string",
              "description": "[UNIMPLEMENTED] Cursor of the returned list."
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      }
    },
    "owner": {
      "type": "string",
      "format": "did"
    },
    "arena": {
      "type": "string",
      "format": "habitat-uri"
    }
  }
}